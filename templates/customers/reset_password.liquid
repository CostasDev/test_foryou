
<div class="account">
  <div clas="account__wrapper">
  <div class="account__reset container--m mxa f jcc aic fdc">
    {% form 'reset_customer_password' %}

      <h3 class="serif mb05 tac">{{ 'customer.reset_password.title' | t }}</h3>

      <p class="tac mb2">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

      <label for="ResetPassword" class="tac hide">
        {{ 'customer.reset_password.password' | t }}
      </label>
      <input type="password"
        name="customer[password]"
        id="ResetPassword"
        class="bg-white account__reset-form {% if form.errors contains 'password' %}input-error{% endif %}"
        placeholder="{{ 'customer.reset_password.password' | t }}">

      <label for="PasswordConfirmation" class="tac hide">
        Confirm Password
      </label>
      <input type="password"
        name="customer[password_confirmation]"
        id="PasswordConfirmation"
        class="bg-white account__reset-form {% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
        placeholder="Confirm Password">

      <div class="f jcc aic"><input type="submit" class="btn tac mt1" value="Submit"></div>
      <div class="c-red mt2">{{ form.errors | default_errors }}</div>
    {% endform %}
  </div>
  </div>
</div>