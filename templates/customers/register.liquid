<div class='account account-register x y tac'>
  <div class="account__wrapper f jcc aic">
    <div class='account__dialog x p2 container--i mxa fdc jcc aic'>
      <div class="x">
        <h3 class='serif mb05'>{{ 'customer.register.title' | t }}</h3>

        {% form 'create_customer', class: 'x' %}
          <div class="mb1 c-red small">{{ form.errors | default_errors }} </div>
          {%
            include 'component-input' with
            placeholder: 'First Name',
            name: 'customer[first_name]',
            value: form.first_name,
            type: 'text',
            className: 'bg-white mb1'
          %}
          {%
            include 'component-input' with
            placeholder: 'Last Name',
            name: 'customer[last_name]',
            type: 'text',
            className: 'bg-white mb1'
          %}
          {%
            include 'component-input' with
            placeholder: 'Email',
            name: 'customer[email]',
            type: 'email',
            value: form.email,
            spellcheck: "off",
            autocapitalize: "off",
            className: 'bg-white mb1'
          %}

          {%
            include 'component-input' with
            placeholder: 'Password',
            name: 'customer[password]',
            type: 'password',
            className: 'bg-white mb1'
          %}

          <div class='mt2'>
            <div class='mt1'>
              {%
              include 'component-button' with
              tag: 'button',
              type: 'submit',
              cta: 'Sign Up',
              className: 'btn'
              %}
            </div>
          </div>
          <div class='pt1 f aic small jcc'>
            <div class='small cgm'>
              {% comment %} <a href="{{ shop.url }}" class="mt1 underline no-ajax">{{ 'customer.register.cancel' | t }}</a><br /> {% endcomment %}
              Already have an account? <a class='mt1 underline no-ajax' href='/account/login'>Login</a>
            </div>
          </div>
        {% endform %}
        </div>
      </div>
    </div>
</div>
