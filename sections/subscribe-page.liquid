<div class='subscribe-page '>
  <div class='container--xl mha '>
    {% comment %} <div class='home__about-block'>
      <img class='fill-h px2 lazyload' data-src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.image.alt | escape }}" />
    </div> {% endcomment %}
    <div class='container--m mha line-break tac'>
      <h3 class='serif '>{{section.settings.title}}</h3>
      <div class="subscribe-page__copy container--xs mxa"><p>{{section.settings.description}}</p></div>

      <div class="klaviyo-form-ShJvLW"></div>

    <div class="subscribe-page__consent container--a mha"> <p>{{section.settings.sms_consent}}</p></div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Subscribe Page",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Our most powerful ingrown treatment yet."
      },
      {
        "id": "description",
        "type": "richtext",
        "label": "Description"
      },
          {
        "id": "sms_consent",
        "type": "richtext",
        "label": "SMS Consent language"
      }
    ]
  }
{% endschema %}