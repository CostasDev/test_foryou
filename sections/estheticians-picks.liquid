<div class="esthetician">
  <div class="hero f fw jcb hero__medium mb2" style="background-image: url({{section.settings.bg_image | img_url: '2000x'}})" alt="{{ section.settings.bg_image | escape }}">
    <div class="hero__image-overlay"></div>
     <div class="esthetician__hero container--mm f z6">
           <div class="esthetician__desktop-headline">{% include 'icon' with 'esthetician-desktop-headline' %}</div>
           <div class="esthetician__mobile-headline"> {% include 'icon' with 'esthetician-mobile-headline' %}</div>
           <p class="medium-text cw">{{ section.settings.headline_text }}</p>
       </div>
  </div>


    {% comment %} Esthetician 1 {% endcomment %}
    <div class="esthetician__block x y">
        <div class="container--xl f jcc aie mxa">
            <div class="esthetician__image rel">
                <div class="esthetician__image-wrapper archway"><img class="lazyload" data-src="{{ section.settings.esthetician_image1 | img_url: '1200x'}}" alt="{{ section.settings.esthetician_image1 | escape }}"></div>
            </div>
            <div class="esthetician__text">
                <div class="esthetician__text-wrapper">
                    <h2 class="serif esthetician__name">{{ section.settings.esthetician_name1}}</h2>
                    <div class="esthetician__location ttu bold"><div class="esthetician__store">{{ section.settings.esthetician_store1}}</div> {{ section.settings.esthetician_location1}}</div>
                    <div class="esthetician__message"><p>{{ section.settings.esthetician_text1}}</p></div>
                </div>

                <div class="esthetician__product f aic">
                    <div class="esthetician__product-image">
                        <a href="{{section.settings.esthetician_url1}}">
                        <div class="esthetician__product-wrapper">
                            <img class="lazyload" data-src="{{ section.settings.esthetician_product_image1 | img_url: '800x'}}" alt="{{ section.settings.esthetician_product_image1 | escape }}">
                        </div>
                        </a>
                    </div>
                    <div class="esthetician__product-info pl1">
                        <a href="{{section.settings.esthetician_url1}}"><h2 class="italic-serif c-gold">{{section.settings.esthetician_product_title1}}</h2></a>
                        <p class="rte">{{section.settings.esthetician_product_info1}}</p>
                        <a href="{{section.settings.esthetician_url1}}"><div class="esthetician__cta ttu rel bold c-gold shop-now-cta">Shop Now {% include 'icon' with 'esthetician-arrow-right' %}</div></a> 
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="esthetician__quote rel fill-h fill-w">
        <div class="container--xxl mxa rel fill-h fill-w">
        <div class="esthetician__quote-mark leftmark serif c-gold abs">{% include 'icon' with 'esthetician-left-mark' %}</div>
        <div class="esthetician__quote-mark rightmark serif c-gold abs">{% include 'icon' with 'esthetician-right-mark' %}</div>
