{% if required == blank %}
  {% assign required = 'false' %}
{% endif %}

{%- capture id -%}
{{type}}{{name}}{{ className | replace: ' ', '' }}
{%- endcapture -%}

{%- capture cx -%}
  select-wrapper x rel
  {{ className }}
  {% if boxed %}is-boxed{% endif %}
{%- endcapture -%}

<div class='{{ cx }}'>
  <label for='{{ id }}' class='hide'>{{ label }}</label>
  <select
    id='{{ id }}'
    name='{{ name }}'
    value='{{ value }}'
    {{ attributes }}
    required='{{ required }}'>
    {% if placeholder %}<option disabled selected>{{ placeholder }}</option>{% endif %}
    {{ options }}
  </select>

  {% comment %} <div class="select__dropdown-caret">{% include 'icon' with 'caret-down' %}</div> {% endcomment %}
</div>
